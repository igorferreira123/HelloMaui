<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloMauii.MainPage"
             Title="CentralDocs">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" Orientation="Vertical" 
            HorizontalOptions="Center" VerticalOptions="Center">

                <Image Source="dotnet_bot.png"  WidthRequest="150"/>
                <Label Text="Faça o seu cadastro" FontAttributes="Bold" FontSize="18"/>

            </StackLayout>

            <StackLayout Grid.Row="1" Orientation="Vertical" 
            HorizontalOptions="Center" VerticalOptions="Center">

                <StackLayout WidthRequest="320">

                    <Label Text="Nome Completo"/>
                    <Entry x:Name="NomeCompleto" Keyboard="Text" 
                    Placeholder="Nome completo" Margin="0,10,0,0"/>

                </StackLayout>
                <StackLayout WidthRequest="320" Margin="0,20,0,0">

                    <Label Text="Data de nascimento"/>
                    <DatePicker x:Name=" DataNascimento" Format="dd/mm/yyyy"></DatePicker>

                </StackLayout>

                <StackLayout WidthRequest="320" Margin="0,20,0,0">

                    <Label Text="Gênero"/>
                    <Picker x:Name="genero">
                        <Picker.Items>
                            <x:String>Masculino</x:String>
                            <x:String>Feminino</x:String>
                            <x:String>Prefiro não dizer</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>
                <StackLayout WidthRequest="320" Margin="0,20,0,0">
                    <Label Text="Idade"/>
                    <Entry x:Name=" Idade" Keyboard="Numeric" Placeholder="Idade" Margin="0,10,0,0"/>

                </StackLayout>
            </StackLayout>

            <StackLayout Grid.Row="2" Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,20,0,0">
                <Button x:Name="Cadastrar" Text="Cadastrar"></Button>
            </StackLayout>

        </Grid>
    </ScrollView>

</ContentPage>
